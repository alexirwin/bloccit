<%= form_for [topic, post, post.comments.build] do |f| %>
  <% if @comment.errors.any? %>
     <div class="alert alert-danger">
       <h4>There are <%= pluralize(@comment.errors.count, "error") %>.</h4>
       <ul>
         <% @comment.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
       </ul>
     </div>
   <% end %>
  <%= form_group_tag(@comment.errors[:body]) do %>
    <div class="form-group col-md-1">
    <%= f.label :body %>
  </div>
  <div class="form-group col-md-8">
      <%= f.text_field :body, class: 'form-control', placeholder: "Enter comment" %>
  <% end %>
</div>
  <div class="form-group col-md-2">
   <%= f.submit "Create Comment", class: 'btn btn-success' %>
 </div>
<% end %>